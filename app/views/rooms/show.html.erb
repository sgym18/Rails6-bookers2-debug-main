<h1>さんとのチャット</h1>
<div class="chats">
  <% if @messages.present? %>
    <% @messages.each do |m| %>
    <div><%= m.message %></div>
  <% end %>
  <% end %>
</div>
<div class="post">
  <%= form_with model: @message, local: true do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit '送信' %>
  <% end %>
</div>